@model List<TechStoreEll.Core.Entities.Address>
@{
    ViewData["Title"] = "Мои адреса";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0 fw-bold">
                    <i class="bi bi-house-door me-2"></i>Мои адреса
                </h2>
                <a asp-action="Edit" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Добавить адрес
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row g-4">
                    @foreach (var addr in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0 rounded-4">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">
                                        @(addr.Label ?? "Без названия")
                                        <div class="mt-2">
                                            @if (ViewBag.ShippingAddressId?.Equals(addr.Id) == true)
                                            {
                                                <span class="badge bg-success me-1">
                                                    <i class="bi bi-truck me-1"></i>Доставка
                                                </span>
                                            }
                                            @if (ViewBag.BillingAddressId?.Equals(addr.Id) == true)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-credit-card me-1"></i>Оплата
                                                </span>
                                            }
                                        </div>
                                    </h5>
                                    <div class="card-text flex-grow-1">
                                        <div class="mb-2">
                                            <i class="bi bi-geo-alt text-muted me-2"></i>
                                            <span class="text-body">
                                                @addr.Country<br />
                                                @if (!string.IsNullOrEmpty(addr.Region)) { 
                                                    <span class="text-muted">@addr.Region<br /></span> 
                                                }
                                                @addr.City, @addr.Street, @addr.House
                                                @if (!string.IsNullOrEmpty(addr.Apartment)) { 
                                                    <text>, кв. @addr.Apartment</text> 
                                                }
                                                @if (!string.IsNullOrEmpty(addr.Postcode)) { 
                                                    <text>, @addr.Postcode</text> 
                                                }
                                            </span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-wrap gap-2 mt-auto">
                                        <a asp-action="Edit" asp-route-id="@addr.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                            <i class="bi bi-pencil me-1"></i>Изменить
                                        </a>
                                        
                                        <form asp-action="SetShipping" asp-route-id="@addr.Id" method="post" class="d-inline flex-fill">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-success w-100">
                                                <i class="bi bi-truck me-1"></i>Доставка
                                            </button>
                                        </form>
                                        
                                        <form asp-action="SetBilling" asp-route-id="@addr.Id" method="post" class="d-inline flex-fill">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-info w-100">
                                                <i class="bi bi-credit-card me-1"></i>Оплата
                                            </button>
                                        </form>
                                        
                                        @if (ViewBag.ShippingAddressId?.Equals(addr.Id) == false && ViewBag.BillingAddressId?.Equals(addr.Id) == false)
                                        {
                                            <form asp-action="Delete" asp-route-id="@addr.Id" method="post" class="d-inline flex-fill"
                                                  onsubmit="return confirm('Удалить этот адрес?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="bi bi-trash me-1"></i>Удалить
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="alert alert-info rounded-4 py-5">
                        <i class="bi bi-house-exclamation display-4 text-muted mb-3"></i>
                        <div class="fs-5 mb-3">У вас пока нет сохранённых адресов</div>
                        <a asp-action="Edit" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Добавить первый адрес
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
    }
    
    .btn-sm {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
    }
</style>