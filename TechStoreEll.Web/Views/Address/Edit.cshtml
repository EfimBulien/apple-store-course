@model TechStoreEll.Core.Models.AddressFormModel
@{
    ViewData["Title"] = Model.Id.HasValue ? "Редактировать адрес" : "Новый адрес";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Label" class="form-label"></label>
        <input asp-for="Label" class="form-control" placeholder="Дом, Работа, Дача...">
        <span asp-validation-for="Label" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control">
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Region" class="form-label"></label>
            <input asp-for="Region" class="form-control" placeholder="Московская область">
            <span asp-validation-for="Region" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" placeholder="Москва">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Postcode" class="form-label"></label>
            <input asp-for="Postcode" class="form-control" placeholder="123456">
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mb-3">
            <label asp-for="Street" class="form-label"></label>
            <input asp-for="Street" class="form-control" placeholder="Ленина">
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="House" class="form-label"></label>
            <input asp-for="House" class="form-control" placeholder="10">
            <span asp-validation-for="House" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Apartment" class="form-label"></label>
        <input asp-for="Apartment" class="form-control" placeholder="42">
        <span asp-validation-for="Apartment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}