@{
    ViewData["Title"] = "UI Components Demo";
}

<div class="space-y-12 p-6">

    <!-- Buttons -->
    <section>
        <h2 class="text-2xl font-bold mb-4">Buttons</h2>
        <div class="space-x-3">
            <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Primary</button>
            <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">Secondary</button>
            <button class="px-4 py-2 border border-gray-400 rounded-lg">Outline</button>
            <button class="px-4 py-2 text-blue-600 hover:underline">Link</button>
        </div>
    </section>

    <!-- Form Elements -->
    <section>
        <h2 class="text-2xl font-bold mb-4">Form Elements</h2>
        <form class="space-y-4 max-w-md">
            <div>
                <label class="block mb-1 font-medium">Text Input</label>
                <input type="text" class="w-full border rounded-lg px-3 py-2" placeholder="Type here" />
            </div>
            <div>
                <label class="block mb-1 font-medium">Select</label>
                <select class="w-full border rounded-lg px-3 py-2">
                    <option>Option A</option>
                    <option>Option B</option>
                </select>
            </div>
            <div class="flex items-center space-x-4">
                <label class="flex items-center space-x-2">
                    <input type="checkbox" class="rounded" />
                    <span>Checkbox</span>
                </label>
                <label class="flex items-center space-x-2">
                    <input type="radio" name="radioDemo" class="rounded-full" />
                    <span>Radio</span>
                </label>
            </div>
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="checkbox" class="sr-only peer" />
                <span class="w-10 h-5 bg-gray-300 rounded-full relative transition-colors duration-300
                 peer-checked:bg-blue-500">
                    <span class="absolute left-1 top-1 w-3 h-3 bg-white rounded-full
                     transition-transform duration-300 peer-checked:translate-x-5"></span>
                </span>
                <span>Toggle</span>
            </label>

        </form>
    </section>

    <!-- Cards -->
    <section>
        <h2 class="text-2xl font-bold mb-4">Cards</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="border rounded-lg p-4 shadow hover:shadow-lg">
                <img src="https://via.placeholder.com/300x150" class="rounded mb-3" />
                <h3 class="text-lg font-semibold">Card Title</h3>
                <p class="text-gray-600">Some description about this card.</p>
                <button class="mt-3 px-3 py-2 bg-blue-600 text-white rounded-lg">Action</button>
            </div>
            <div class="border rounded-lg p-4 shadow hover:shadow-lg">
                <h3 class="text-lg font-semibold">Simple Card</h3>
                <p class="text-gray-600">Just text and no image here.</p>
            </div>
            <div class="border rounded-lg p-4 shadow hover:shadow-lg">
                <h3 class="text-lg font-semibold">Profile Card</h3>
                <div class="flex items-center space-x-3 mt-2">
                    <img src="https://via.placeholder.com/40" class="w-10 h-10 rounded-full" />
                    <span>John Doe</span>
                </div>
            </div>
        </div>
    </section>

    <!-- List -->
    <section>
        <h2 class="text-2xl font-bold mb-4">Lists</h2>
        <ul class="list-disc list-inside space-y-1">
            <li>List item 1</li>
            <li>List item 2</li>
            <li>List item 3</li>
        </ul>
    </section>

    <!-- Table -->
    <section>
        <h2 class="text-2xl font-bold mb-4">Table</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full border">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="px-4 py-2 border">Name</th>
                        <th class="px-4 py-2 border">Role</th>
                        <th class="px-4 py-2 border">Email</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="px-4 py-2 border">Alice</td>
                        <td class="px-4 py-2 border">Admin</td>
                        <td class="px-4 py-2 border">alice@mail.com</td>
                    </tr>
                    <tr class="bg-gray-50">
                        <td class="px-4 py-2 border">Bob</td>
                        <td class="px-4 py-2 border">User</td>
                        <td class="px-4 py-2 border">bob@mail.com</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Alerts -->
    <section>
        <h2 class="text-2xl font-bold mb-4">Alerts</h2>
        <div class="space-y-2">
            <div class="p-3 rounded bg-green-100 text-green-800">Success message</div>
            <div class="p-3 rounded bg-blue-100 text-blue-800">Info message</div>
            <div class="p-3 rounded bg-yellow-100 text-yellow-800">Warning message</div>
            <div class="p-3 rounded bg-red-100 text-red-800">Error message</div>
        </div>
    </section>

</div>
