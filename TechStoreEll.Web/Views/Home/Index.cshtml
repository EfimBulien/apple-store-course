@using TechStoreEll.Core.Entities
@model IEnumerable<TechStoreEll.Core.Models.ProductViewModel>
@{
    ViewData["Title"] = "Главная";
    var currentSort = ViewData["CurrentSort"]?.ToString();
    var categories = ViewData["Categories"] as List<Category>;
    var selectedCategoryId = ViewData["SelectedCategoryId"] as int?;
    var minRam = ViewData["MinRam"] as int?;
    var maxRam = ViewData["MaxRam"] as int?;
    var minStorage = ViewData["MinStorage"] as int?;
    var maxStorage = ViewData["MaxStorage"] as int?;
    var minPrice = ViewData["MinPrice"] as decimal?;
    var maxPrice = ViewData["MaxPrice"] as decimal?;
    var minPriceOverall = ViewData["MinPriceOverall"] as decimal? ?? 0;
    var maxPriceOverall = ViewData["MaxPriceOverall"] as decimal? ?? 100000;
    var inStock = ViewData["InStock"] as bool?;
    var itemsPerPage = ViewData["ItemsPerPage"] as int? ?? 20;
}

<section class="py-5 text-center bg-body-tertiary">
    <div class="container">
        <h1 class="fw-bold display-4">TechStoreEll</h1>
        <p class="lead text-body-secondary mb-4">
            Ваш надёжный магазин техники и электроники. Качество, удобство, быстрая доставка.
        </p>
        @if (User.Identity is { IsAuthenticated: false })
        {
            <div class="d-flex justify-content-center gap-2">
                <a href="/Auth/SignIn" class="btn btn-primary btn-lg px-4">Войти</a>
                <a href="/Auth/SignUp" class="btn btn-outline-secondary btn-lg px-4">Регистрация</a>
            </div>
        }
    </div>
</section>

<div class="container py-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-body-tertiary border-0 py-3">
                    <h5 class="mb-0 fw-bold">Фильтры</h5>
                </div>
                <div class="card-body">
                    <form method="get" id="filterForm">
                        <input type="hidden" name="q" value="@ViewData["CurrentSearch"]" />
                        <input type="hidden" name="sort" value="@currentSort" />

                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Категория</h6>
                            <select name="categoryId" class="form-select" onchange="this.form.submit()">
                                <option value="">Все категории</option>
                                @if (categories != null)
                                {
                                    foreach (var category in categories)
                                    {
                                        <option value="@category.Id" selected="@(selectedCategoryId == category.Id)">
                                            @category.Name
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Цена, ₽</h6>
                            <div class="row g-2">
                                <div class="col">
                                    <input type="number" name="minPrice" class="form-control" 
                                           placeholder="Мин" value="@minPrice" 
                                           min="0" step="100" />
                                </div>
                                <div class="col">
                                    <input type="number" name="maxPrice" class="form-control" 
                                           placeholder="Макс" value="@maxPrice" 
                                           min="0" step="100" />
                                </div>
                            </div>
                            <small class="text-muted price-range-display">
                                Диапазон: <span class="min-price" data-price="@minPriceOverall">@minPriceOverall.ToString("N0")</span> - 
                                <span class="max-price" data-price="@maxPriceOverall">@maxPriceOverall.ToString("N0")</span> ₽
                            </small>
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Оперативная память (ГБ)</h6>
                            <div class="row g-2">
                                <div class="col">
                                    <input type="number" name="minRam" class="form-control" 
                                           placeholder="Мин" value="@minRam" min="0" />
                                </div>
                                <div class="col">
                                    <input type="number" name="maxRam" class="form-control" 
                                           placeholder="Макс" value="@maxRam" min="0" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Постоянная память (ГБ)</h6>
                            <div class="row g-2">
                                <div class="col">
                                    <input type="number" name="minStorage" class="form-control" 
                                           placeholder="Мин" value="@minStorage" min="0" />
                                </div>
                                <div class="col">
                                    <input type="number" name="maxStorage" class="form-control" 
                                           placeholder="Макс" value="@maxStorage" min="0" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Наличие</h6>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="inStock" value="true" 
                                       id="inStockFilter" @(inStock == true ? "checked" : "") onchange="this.form.submit()" />
                                <label class="form-check-label" for="inStockFilter">
                                    Только в наличии
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Применить фильтры</button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Сбросить все</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <form method="get" class="mb-4">
                <div class="input-group shadow-sm rounded">
                    <input type="text" 
                           name="q" 
                           value="@ViewData["CurrentSearch"]" 
                           class="form-control border-0" 
                           placeholder="Поиск товаров..." />
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
                <input type="hidden" name="categoryId" value="@selectedCategoryId" />
                <input type="hidden" name="minRam" value="@minRam" />
                <input type="hidden" name="maxRam" value="@maxRam" />
                <input type="hidden" name="minStorage" value="@minStorage" />
                <input type="hidden" name="maxStorage" value="@maxStorage" />
                <input type="hidden" name="minPrice" value="@minPrice" />
                <input type="hidden" name="maxPrice" value="@maxPrice" />
                
                @if (inStock == true)
                {
                    <input type="hidden" name="inStock" value="true" />
                }
                
                @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"]?.ToString()) || 
                     selectedCategoryId.HasValue || 
                     minRam.HasValue || maxRam.HasValue || 
                     minStorage.HasValue || maxStorage.HasValue ||
                     minPrice.HasValue || maxPrice.HasValue ||
                     inStock == true)
                {
                    <div class="mt-2">
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-link">Сбросить все фильтры</a>
                    </div>
                }
            </form>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">
                    Товары
                    @if (selectedCategoryId.HasValue)
                    {
                        <span class="text-muted fs-5">
                            - @categories?.FirstOrDefault(c => c.Id == selectedCategoryId)?.Name
                        </span>
                    }
                </h2>
                <div class="d-flex gap-2 align-items-center">
                    <label for="sortSelect" class="form-label mb-0 me-2">
                        Сортировать:
                    </label>
                    <select id="sortSelect" class="form-select form-select-sm" style="width: auto;"
                            onchange="updateSort(this.value)">
                        <option value="date-desc" selected="@(currentSort == "date-desc")">
                            Сначала новые
                        </option>
                        <option value="date-asc" selected="@(currentSort == "date-asc")">
                            Сначала старые
                        </option>
                        <option value="price-asc" selected="@(currentSort == "price-asc")">
                            По возрастанию цены
                        </option>
                        <option value="price-desc" selected="@(currentSort == "price-desc")">
                            По убыванию цены
                        </option>
                    </select>
                </div>
            </div>

            <div id="product-container" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 g-4">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 rounded-4 position-relative product-card">
                            @if (!product.IsInStock)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-danger">Нет в наличии</span>
                                </div>
                            }
                            else if (product.StockQuantity < 5)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-warning text-dark">Мало</span>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(product.PrimaryImageUrl))
                            {
                                <img src="@product.PrimaryImageUrl" class="card-img-top bg-white p-3" 
                                     alt="@product.PrimaryImageAltText" 
                                     style="height: 200px; object-fit: contain;">
                            }
                            else
                            {
                                <div class="d-flex justify-content-center align-items-center bg-dark text-white" 
                                     style="height: 200px;">
                                    <span>Нет изображения</span>
                                </div>
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-truncate">@product.Name</h5>
                                
                                <div class="mb-2">
                                    @if (product.StorageSize > 0)
                                    {
                                        <small class="text-muted d-block">Память: @product.StorageSize ГБ</small>
                                    }
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-primary">@product.CategoryName</span>
                                    <span class="fw-bold price-display" data-price="@product.Price">
                                        @(product.Price.HasValue ? $"{product.Price:N0} ₽" : "Н/Д")
                                    </span>
                                </div>

                                <div class="mb-2">
                                    @if (product.IsInStock)
                                    {
                                        <small class="text-success">
                                            <i class="bi bi-check-circle"></i> В наличии
                                            @if (product.StockQuantity > 0)
                                            {
                                                <span class="text-muted">(@product.StockQuantity шт.)</span>
                                            }
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-danger">
                                            <i class="bi bi-x-circle"></i> Нет в наличии
                                        </small>
                                    }
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="text-warning">
                                        @if (product.AvgRating.HasValue)
                                        {
                                            <span>
                                                @string.Join("", Enumerable.Range(0, (int)Math.Round(product.AvgRating.Value)).Select(_ => "★"))
                                            </span>
                                            <span class="text-muted">
                                                @string.Join("", Enumerable.Range(0, 5 - (int)Math.Round(product.AvgRating.Value)).Select(_ => "★"))
                                            </span>
                                            <small class="ms-1">
                                                (@product.ReviewsCount)
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Нет рейтинга</span>
                                        }
                                    </div>
                                </div>
                                <a asp-controller="Home" asp-action="Product" asp-route-id="@product.Id"
                                   class="btn @(product.IsInStock ? "btn-primary" : "btn-outline-secondary") mt-auto w-100 shadow-sm @(!product.IsInStock ? "disabled" : "")">
                                    @(product.IsInStock ? "Заказать" : "Нет в наличии")
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <h4 class="text-muted">Товары не найдены</h4>
                    <p class="text-muted">Попробуйте изменить параметры фильтрации</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary">Сбросить фильтры</a>
                </div>
            }

            <div class="d-flex justify-content-center mt-4 gap-2">
                @if (Model.Count() >= itemsPerPage)
                {
                    <button id="showMoreBtn" class="btn btn-outline-primary"
                            data-skip="@(Model.Count())"
                            data-take="@itemsPerPage">
                        Показать ещё
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,.15);
        transition: all 0.2s ease-in-out;
    }
    .product-card {
        transition: all 0.2s ease-in-out;
    }
</style>

@section Scripts {
    <script>
        function formatNumber(number, numberFormat) {
            const num = parseFloat(number);
            if (isNaN(num)) return number;

            const formatter = numberFormat === 'en_US'
                ? new Intl.NumberFormat('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 })
                : new Intl.NumberFormat('ru-RU', { minimumFractionDigits: 0, maximumFractionDigits: 0 });

            return formatter.format(num) + ' ₽';
        }

        function formatAllPrices(numberFormat) {
            document.querySelectorAll('.price-display').forEach(el => {
                const price = el.getAttribute('data-price');
                if (price && price !== '0') el.textContent = formatNumber(price, numberFormat);
            });

            const minEl = document.querySelector('.min-price');
            const maxEl = document.querySelector('.max-price');
            if (minEl) minEl.textContent = formatNumber(minEl.getAttribute('data-price'), numberFormat).replace(' ₽', '');
            if (maxEl) maxEl.textContent = formatNumber(maxEl.getAttribute('data-price'), numberFormat).replace(' ₽', '');
        }

        async function loadUserSettings() {
            try {
                const res = await fetch('/Profile/GetUserSettings');
                const settings = res.ok 
                    ? await res.json() 
                    : { numberFormat: 'ru_RU' };
                localStorage.setItem('userSettings', JSON.stringify(settings));
                formatAllPrices(settings.numberFormat);
            } catch {
                const def = { numberFormat: 'ru_RU' };
                localStorage.setItem('userSettings', JSON.stringify(def));
                formatAllPrices('ru_RU');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem('userSettings');
            if (saved) {
                formatAllPrices(JSON.parse(saved).numberFormat);
            } else {
                loadUserSettings();
            }

            document.getElementById('showMoreBtn')?.addEventListener('click', async function () {
                const skip = parseInt(this.getAttribute('data-skip'));
                const take = parseInt(this.getAttribute('data-take'));
                const url = new URL(window.location.href);
                url.searchParams.set('skip', skip);
                url.searchParams.set('take', take);

                const res = await fetch(url);
                const html = await res.text();
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newContent = doc.getElementById('product-container')?.innerHTML;

                if (newContent?.trim()) {
                    document.getElementById('product-container').insertAdjacentHTML('beforeend', newContent);
                    this.setAttribute('data-skip', skip + take);

                    const settings = JSON.parse(localStorage.getItem('userSettings') || '{"numberFormat":"ru_RU"}');
                    formatAllPrices(settings.numberFormat);
                } else {
                    this.disabled = true;
                    this.textContent = 'Больше нет';
                }
            });

            document.getElementById('showAllBtn')?.addEventListener('click', function () {
                const url = new URL(window.location.href);
                url.searchParams.set('take', '10000');
                url.searchParams.delete('skip');
                window.location.href = url.toString();
            });
        });

        function updateSort(sortValue) {
            const url = new URL(window.location.href);
            url.searchParams.set('sort', sortValue);
            window.location.href = url.toString();
        }

        document.addEventListener('DOMContentLoaded', () => {
            let timeout;
            document.querySelectorAll('input[type="number"]').forEach(input => {
                input.addEventListener('input', () => {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => document.getElementById('filterForm')?.submit(), 1000);
                });
            });
        });
    </script>
}