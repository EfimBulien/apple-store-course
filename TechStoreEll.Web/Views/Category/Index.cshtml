@model IEnumerable<TechStoreEll.Core.Entities.Category>

@{
    ViewData["Title"] = "Категории товаров";
}

<h2>Категории товаров</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить категорию товаров</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Название</th>
        <th>Родительская категория</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.ParentId</td>
            <td>@item.Description</td>
            <td>
                <a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                    Подробнее
                </a>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                    Изменить
                </a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                    Удалить
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>