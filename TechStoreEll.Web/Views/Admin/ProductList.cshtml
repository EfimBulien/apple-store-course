<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Список товаров</h2>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table">
                        <tr>
                            <th scope="col">Название</th>
                            <th scope="col">SKU</th>
                            <th scope="col">Категория</th>
                            <th scope="col">Варианты</th>
                            <th scope="col">Активен</th>
                            <th scope="col" class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td class="fw-medium">@product.Name</td>
                                    <td class="text-muted">@product.Sku</td>
                                    <td>@product.CategoryName</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@product.VariantCount</span>
                                    </td>
                                    <td>
                                        @if (product.Active)
                                        {
                                            <span class="badge bg-success d-inline-flex align-items-center">
                                                <i class="bi bi-check-circle-fill me-1"></i> Да
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary d-inline-flex align-items-center">
                                                <i class="bi bi-x-circle-fill me-1"></i> Нет
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="EditProduct" asp-route-id="@product.Id"
                                           class="btn btn-sm btn-primary me-2"
                                           title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post"
                                              onsubmit="return confirm('Вы действительно хотите удалить этот товар?');"
                                              style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    title="Удалить">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">Нет товаров для отображения</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>