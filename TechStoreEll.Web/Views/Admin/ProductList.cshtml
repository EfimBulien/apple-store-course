@model List<TechStoreEll.Web.Models.ProductListItemViewModel>

@{
    ViewData["Title"] = "Список товаров";
}

<h2>Список товаров</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-striped align-middle">
    <thead>
    <tr>
        <th>Название</th>
        <th>SKU</th>
        <th>Категория</th>
        <th>Варианты</th>
        <th>Активен</th>
        <th class="text-end">Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Sku</td>
            <td>@product.CategoryName</td>
            <td>@product.VariantCount</td>
            <td>
                @if (product.Active)
                {
                    <span class="badge bg-success">Да</span>
                }
                else
                {
                    <span class="badge bg-secondary">Нет</span>
                }
            </td>
            <td class="text-end">
                <a asp-action="EditProduct" asp-route-id="@product.Id"
                   class="btn btn-sm btn-outline-primary me-1">
                    Редактировать
                </a>

                <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post"
                      onsubmit="return confirm('Вы действительно хотите удалить этот товар?');"
                      style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>