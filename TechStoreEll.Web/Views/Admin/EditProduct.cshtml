@model TechStoreEll.Web.Models.ProductEditViewModel

@{
    ViewData["Title"] = "Редактирование товара";
}

<h2>Редактирование товара</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Название *</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sku" class="form-label">Артикул (SKU) *</label>
                <input asp-for="Sku" class="form-control" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Категория *</label>
                <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select">
                    <option value="0">— Выберите категорию —</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Active" class="form-check-input" type="checkbox" />
                <label asp-for="Active" class="form-check-label">Активен</label>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">URL изображения (временно)</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                <div class="form-text">
                    В будущем будет загрузка через MinIO. Пока можно вставить URL вручную.
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <h5>Варианты товара</h5>
            <div id="variants-container">
                @for (int i = 0; i < Model.Variants.Count; i++)
                {
                    <div class="border rounded p-3 mb-3">
                        <input type="hidden" asp-for="Variants[i].Id" />
                        <input type="hidden" asp-for="Variants[i].ProductId" />

                        <div class="row g-2">
                            <div class="col-md-3">
                                <label asp-for="Variants[i].VariantCode" class="form-label">Код</label>
                                <input asp-for="Variants[i].VariantCode" class="form-control form-control-sm" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Variants[i].Price" class="form-label">Цена</label>
                                <input asp-for="Variants[i].Price" class="form-control form-control-sm" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Variants[i].Color" class="form-label">Цвет</label>
                                <input asp-for="Variants[i].Color" class="form-control form-control-sm" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Variants[i].StorageGb" class="form-label">Память (ГБ)</label>
                                <input asp-for="Variants[i].StorageGb" class="form-control form-control-sm" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Variants[i].Ram" class="form-label">ОЗУ (ГБ)</label>
                                <input asp-for="Variants[i].Ram" class="form-control form-control-sm" />
                            </div>
                        </div>

                        <div class="mt-2">
                            <h6>Изображения варианта</h6>
                            @for (int j = 0; j < Model.Variants[i].Images.Count; j++)
                            {
                                <div class="input-group mb-2">
                                    <input type="hidden" asp-for="Variants[i].Images[j].Id" />
                                    <input asp-for="Variants[i].Images[j].ImageUrl" class="form-control form-control-sm" placeholder="URL изображения" />
                                    <input asp-for="Variants[i].Images[j].AltText" class="form-control form-control-sm" placeholder="Alt текст" />
                                    <input asp-for="Variants[i].Images[j].SortOrder" type="number" class="form-control form-control-sm" style="width:80px;" />
                                    <div class="form-check" style="margin: 0 10px;">
                                        <input type="hidden" asp-for="Variants[i].Images[j].IsPrimary" value="false" />
                                        <input asp-for="Variants[i].Images[j].IsPrimary" class="form-check-input" />
                                    </div>
                                    <button type="button" class="btn btn-sm btn-danger" onclick="this.closest('.input-group').remove()">×</button>
                                </div>
                            }
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addImage(this, @i)">
                                + Добавить изображение
                            </button>
                        </div>
                    </div>
                }
            </div>

            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="addVariant()">
                + Добавить вариант
            </button>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
        <a asp-action="Export" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let variantIndex = @Model.Variants.Count;

        function addVariant() {
            const container = document.getElementById('variants-container');
            const html = `
                <div class="border rounded p-3 mb-3">
                    <input type="hidden" name="Variants[${variantIndex}].Id" value="0" />
                    <input type="hidden" name="Variants[${variantIndex}].ProductId" value="@Model.Id" />

                    <div class="row g-2">
                        <div class="col-md-3">
                            <label class="form-label">Код</label>
                            <input name="Variants[${variantIndex}].VariantCode" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Цена</label>
                            <input name="Variants[${variantIndex}].Price" type="number" step="0.01" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Цвет</label>
                            <input name="Variants[${variantIndex}].Color" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Память (ГБ)</label>
                            <input name="Variants[${variantIndex}].StorageGb" type="number" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">ОЗУ (ГБ)</label>
                            <input name="Variants[${variantIndex}].Ram" type="number" class="form-control form-control-sm" />
                        </div>
                    </div>

                    <div class="mt-2">
                        <h6>Изображения варианта</h6>
                        <div class="images-container-${variantIndex}">
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addImageToNewVariant(${variantIndex})">
                            + Добавить изображение
                        </button>
                    </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', html);
            variantIndex++;
        }

        function addImage(button, variantIndex) {
            const container = button.previousElementSibling;
            const imageIndex = container.querySelectorAll('.input-group').length;
            const html = `
                <div class="input-group mb-2">
                    <input type="hidden" name="Variants[${variantIndex}].Images[${imageIndex}].Id" value="0" />
                    <input name="Variants[${variantIndex}].Images[${imageIndex}].ImageUrl" class="form-control form-control-sm" placeholder="URL изображения" required />
                    <input name="Variants[${variantIndex}].Images[${imageIndex}].AltText" class="form-control form-control-sm" placeholder="Alt текст" />
                    <input name="Variants[${variantIndex}].Images[${imageIndex}].SortOrder" type="number" class="form-control form-control-sm" style="width:80px;" value="0" />
                    <div class="form-check" style="margin: 0 10px;">
                        <input type="hidden" name="Variants[${variantIndex}].Images[${imageIndex}].IsPrimary" value="false" />
                        <input name="Variants[${variantIndex}].Images[${imageIndex}].IsPrimary" class="form-check-input" value="true" />
                    </div>
                    <button type="button" class="btn btn-sm btn-danger" onclick="this.closest('.input-group').remove()">×</button>
                </div>`;
            container.insertAdjacentHTML('beforeend', html);
        }

        function addImageToNewVariant(variantIndex) {
            const container = document.querySelector(`.images-container-${variantIndex}`);
            const imageIndex = container.querySelectorAll('.input-group').length;
            const html = `
                <div class="input-group mb-2">
                    <input type="hidden" name="Variants[${variantIndex}].Images[${imageIndex}].Id" value="0" />
                    <input name="Variants[${variantIndex}].Images[${imageIndex}].ImageUrl" class="form-control form-control-sm" placeholder="URL изображения" required />
                    <input name="Variants[${variantIndex}].Images[${imageIndex}].AltText" class="form-control form-control-sm" placeholder="Alt текст" />
                    <input name="Variants[${variantIndex}].Images[${imageIndex}].SortOrder" type="number" class="form-control form-control-sm" style="width:80px;" value="0" />
                    <div class="form-check" style="margin: 0 10px;">
                        <input type="hidden" name="Variants[${variantIndex}].Images[${imageIndex}].IsPrimary" value="false" />
                        <input name="Variants[${variantIndex}].Images[${imageIndex}].IsPrimary" class="form-check-input" value="true" />
                    </div>
                    <button type="button" class="btn btn-sm btn-danger" onclick="this.closest('.input-group').remove()">×</button>
                </div>`;
            container.insertAdjacentHTML('beforeend', html);
        }
    </script>
}