@model TechStoreEll.Web.Models.ProfileViewModel

@{
    ViewData["Title"] = "Личный кабинет";
}

<h2>Личный кабинет</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Личные данные</h4>
            </div>
            <div class="card-body">
                <form asp-action="UpdateProfile" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="User.Email" class="form-label">Email</label>
                        <input asp-for="User.Email" class="form-control" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.Phone" class="form-label">Телефон</label>
                        <input asp-for="User.Phone" class="form-control" />
                        <span asp-validation-for="User.Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.FirstName" class="form-label">Имя</label>
                        <input asp-for="User.FirstName" class="form-control"/>
                        <span asp-validation-for="User.FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.LastName" class="form-label">Фамилия</label>
                        <input asp-for="User.LastName" class="form-control" />
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.MiddleName" class="form-label">Отчество</label>
                        <input asp-for="User.MiddleName" class="form-control" />
                        <span asp-validation-for="User.MiddleName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Обновить данные</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Настройки</h4>
            </div>
            <div class="card-body">
                <form asp-action="UpdateSettings" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Settings.Theme" class="form-label">Тема</label>
                        <select asp-for="Settings.Theme" class="form-select">
                            <option value="">По умолчанию</option>
                            <option value="light">Светлая</option>
                            <option value="dark">Темная</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Settings.ItemsPerPage" class="form-label">Элементов на странице</label>
                        <input asp-for="Settings.ItemsPerPage" type="number" class="form-control" min="5" max="200" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Settings.DateFormat" class="form-label">Формат даты</label>
                        <select asp-for="Settings.DateFormat" class="form-select">
                            <option value="">По умолчанию</option>
                            <option value="YYYY-MM-DD">YYYY-MM-DD</option>
                            <option value="DD.MM.YYYY">DD.MM.YYYY</option>
                            <option value="MM/DD/YYYY">MM/DD/YYYY</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Settings.NumberFormat" class="form-label">Формат чисел</label>
                        <select asp-for="Settings.NumberFormat" class="form-select">
                            <option value="">По умолчанию</option>
                            <option value="en_US">Английский (1,000.00)</option>
                            <option value="ru_RU">Русский (1 000,00)</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Settings.Hotkeys" class="form-label">Горячие клавиши</label>
                        <input asp-for="Settings.Hotkeys" class="form-control" placeholder="Например: ctrl+s, ctrl+f" />
                    </div>

                    <button type="submit" class="btn btn-primary">Сохранить настройки</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <form asp-controller="Auth" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-danger">Выйти</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}