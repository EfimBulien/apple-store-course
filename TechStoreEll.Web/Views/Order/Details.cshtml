@using System.Globalization
@model TechStoreEll.Core.Models.OrderSummary
@{
    ViewData["Title"] = $"Заказ #{Model.OrderNumber}";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0"><i class="bi bi-receipt-cutoff me-2"></i>Заказ #@Model.OrderNumber</h2>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left me-1"></i> К заказам
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Статус:</strong>
                                <span class="badge bg-@GetStatusColor(Model.Status) px-3 py-2">
                                    @GetStatusText(Model.Status)
                                </span>
                            </p>
                            <p class="mb-1"><strong>Оплата:</strong>
                                @if (Model.PaymentStatus != null)
                                {
                                    @GetPaymentStatusText(Model.PaymentStatus)
                                }
                            </p>
                            <p class="mb-0"><strong>Создан:</strong> @Model.CreatedAt.ToString("g")</p>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="text-muted small mb-1">Сумма заказа</div>
                            <div class="fs-3 fw-bold text-success">@Model.TotalAmount.ToString("C")</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-body-tertiary fw-semibold">Товары</div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-body-tertiary">
                            <tr>
                                <th>Товар</th>
                                <th>Характеристики</th>
                                <th>Кол-во</th>
                                <th>Цена</th>
                                <th>Сумма</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.ProductName"
                                                     class="rounded-3 shadow-sm me-2"
                                                     style="width: 50px; height: 50px; object-fit: cover;" />
                                            }
                                            <span class="fw-semibold">@item.ProductName</span>
                                        </div>
                                    </td>
                                    <td class="text-muted">@item.VariantInfo</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td class="fw-semibold text-success">
                                        @((item.UnitPrice * item.Quantity).ToString("C"))
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            @if (Model.CanPay)
            {
                <div class="card shadow-sm border-0 rounded-4 mt-4">
                    <div class="card-header bg-body-tertiary fw-semibold">
                        <i class="bi bi-credit-card me-2"></i>Выберите способ оплаты
                    </div>
                    <div class="card-body">
                        <form asp-action="PayOrder" asp-route-id="@Model.Id" method="post" id="paymentForm">
                            @Html.AntiForgeryToken()
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-check card border rounded-3 p-3 h-100">
                                        <input class="form-check-input" type="radio" name="paymentMethod" 
                                               id="card" value="card" checked>
                                        <label class="form-check-label w-100" for="card">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <i class="bi bi-credit-card-2-front fs-2 text-primary"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">Банковская карта</h6>
                                                    <small class="text-muted">Visa, Mastercard, Мир</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-check card border rounded-3 p-3 h-100">
                                        <input class="form-check-input" type="radio" name="paymentMethod" 
                                               id="sbp" value="sbp">
                                        <label class="form-check-label w-100" for="sbp">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <i class="bi bi-phone fs-2 text-success"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">СБП</h6>
                                                    <small class="text-muted">Быстрый платеж через банк</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-check card border rounded-3 p-3 h-100">
                                        <input class="form-check-input" type="radio" name="paymentMethod" 
                                               id="yoomoney" value="yoomoney">
                                        <label class="form-check-label w-100" for="yoomoney">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <i class="bi bi-wallet fs-2 text-warning"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">ЮMoney</h6>
                                                    <small class="text-muted">Электронный кошелек</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-check card border rounded-3 p-3 h-100">
                                        <input class="form-check-input" type="radio" name="paymentMethod" 
                                               id="qiwi" value="qiwi">
                                        <label class="form-check-label w-100" for="qiwi">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <i class="bi bi-phone-vibrate fs-2 text-danger"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">QIWI Кошелек</h6>
                                                    <small class="text-muted">Онлайн-платежи</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="alert alert-info mt-4">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    <div>
                                        <strong>Демо-режим</strong><br>
                                        <small>Это тестовая среда. Платежи не списывают реальные деньги.</small>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success btn-lg w-100 mt-3">
                                <i class="bi bi-lock-fill me-2"></i>Оплатить @Model.TotalAmount.ToString("C")
                            </button>
                        </form>
                    </div>
                </div>
            }
            
            @if (Model.CanComplete)
            {
                <form asp-action="CompleteOrder" asp-route-id="@Model.Id" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary btn-lg w-100"
                            onclick="return confirm('Подтвердить получение заказа?')">
                        <i class="bi bi-check-circle me-2"></i>Подтвердить получение
                    </button>
                </form>
            }
            
            @if (Model.CanReview)
            {
                var itemsToReview = Model.Reviews.Where(item => !item.AlreadyReviewed).ToList();

                if (itemsToReview.Any())
                {
                    <div class="card shadow-sm border-0 rounded-4 mt-4">
                        <div class="card-header bg-body-tertiary fw-semibold">
                            <i class="bi bi-chat-dots me-2"></i>Оставить отзыв о товарах
                        </div>
                        <div class="card-body">
                            @foreach (var item in itemsToReview)
                            {
                                <div class="border rounded-3 p-4 mb-3">
                                    <div class="d-flex align-items-start">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.ProductName"
                                                 class="rounded-3 me-3"
                                                 style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@item.ProductName</h6>
                                            <small class="text-muted">@item.VariantInfo</small>

                                            <form asp-action="LeaveReview" method="post" class="mt-3">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="orderId" value="@Model.Id" />
                                                <input type="hidden" name="productId" value="@item.ProductId" />

                                                <div class="row g-3">
                                                    <div class="col-md-3">
                                                        <label class="form-label">Оценка</label>
                                                        <select name="rating" class="form-select" required>
                                                            <option value="">Выберите оценку</option>
                                                            <option value="5">Отлично (5 ★)</option>
                                                            <option value="4">Хорошо (4 ★)</option>
                                                            <option value="3">Нормально (3 ★)</option>
                                                            <option value="2">Плохо (2 ★)</option>
                                                            <option value="1">Ужасно (1 ★)</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label class="form-label">Комментарий</label>
                                                        <textarea name="comment" class="form-control"
                                                                  rows="1" placeholder="Расскажите о товаре..."
                                                                  required></textarea>
                                                    </div>
                                                    <div class="col-md-3 d-flex align-items-end">
                                                        <button type="submit" class="btn btn-warning w-100">
                                                            <i class="bi bi-send me-1"></i>Отправить
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="card shadow-sm border-0 rounded-4 mt-4">
                        <div class="card-header bg-body-tertiary fw-semibold">
                            <i class="bi bi-check-circle me-2"></i>Отзывы отправлены
                        </div>
                        <div class="card-body">
                            <p class="mb-0">Вы уже оставили отзывы на все товары из этого заказа.</p>
                        </div>
                    </div>
                }
            }
            <div class="text-center mt-4">
                <a href="/" class="btn btn-outline-primary">
                    <i class="bi bi-house-door me-1"></i> На главную
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const paymentCards = document.querySelectorAll('.form-check.card');
            
            paymentCards.forEach(card => {
                const radio = card.querySelector('input[type="radio"]');
                const label = card.querySelector('.form-check-label');
                
                card.addEventListener('click', function(e) {
                    if (e.target !== radio) {
                        radio.checked = true;
                    }
                    
                    paymentCards.forEach(c => c.classList.remove('border-primary', 'bg-light'));
                    
                    if (radio.checked) {
                        card.classList.add('border-primary', 'bg-light');
                    }
                });
                
                if (radio.checked) {
                    card.classList.add('border-primary', 'bg-light');
                }
            });

            document.getElementById('paymentForm')?.addEventListener('submit', function(e) {
                const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked');
                const methodName = selectedMethod?.parentElement?.querySelector('h6')?.textContent || 'выбранный способ';
                
                if (!confirm(`Оплатить заказ @Model.OrderNumber на сумму @Model.TotalAmount.ToString(CultureInfo.CurrentCulture) рублей через ${methodName}?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>

    <style>
        .form-check.card {
            cursor: pointer;
            transition: all 0.2s ease-in-out;
        }
        
        .form-check.card:hover {
            border-color: #0d6efd;
            transform: translateY(-2px);
        }

        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}

@functions {
    static string GetStatusColor(string status) => status switch
    {
        "completed" => "success",
        "shipped" => "info",
        "paid" => "primary",
        "cancelled" => "danger",
        "refunded" => "warning",
        _ => "secondary"
    };

    static string GetStatusText(string status) => status switch
    {
        "new" => "Новый",
        "paid" => "Оплачен",
        "shipped" => "Отправлен",
        "completed" => "Завершён",
        "cancelled" => "Отменён",
        "refunded" => "Возврат",
        _ => status
    };

    static string GetPaymentStatusText(string status) => status switch
    {
        "success" => "Оплачено",
        "pending" => "Ожидает оплаты",
        "failed" => "Ошибка оплаты",
        "refunded" => "Средства возвращены",
        _ => status
    };
}