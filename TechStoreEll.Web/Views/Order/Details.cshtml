@model TechStoreEll.Web.Models.OrderSummary
@{
    ViewData["Title"] = $"Заказ #{Model.OrderNumber}";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0"><i class="bi bi-receipt-cutoff me-2"></i>Заказ #@Model.OrderNumber</h2>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left me-1"></i> К заказам
                </a>
            </div>

            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Статус:</strong>
                                <span class="badge bg-@GetStatusColor(Model.Status) px-3 py-2">@GetStatusText(Model.Status)</span>
                            </p>
                            <p class="mb-1"><strong>Оплата:</strong> @GetPaymentStatusText(Model.PaymentStatus)
                            </p>
                            <p class="mb-0"><strong>Создан:</strong> @Model.CreatedAt.ToString("g")</p>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="text-muted small mb-1">Сумма заказа</div>
                            <div class="fs-3 fw-bold text-success">@Model.TotalAmount.ToString("C")</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-body-tertiary fw-semibold">Товары</div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-body-tertiary">
                                <tr>
                                    <th>Товар</th>
                                    <th>Характеристики</th>
                                    <th>Кол-во</th>
                                    <th>Цена</th>
                                    <th>Сумма</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.ProductName"
                                                         class="rounded-3 shadow-sm me-2"
                                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                <span class="fw-semibold">@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td class="text-muted">@item.VariantInfo</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td class="fw-semibold text-success">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house-door me-1"></i> На главную
                </a>
            </div>
        </div>
    </div>
</div>

@functions {

    static string GetStatusColor(string status) => status switch
    {
        "completed" => "success",
        "shipped" => "info",
        "paid" => "primary",
        "cancelled" => "danger",
        "refunded" => "warning",
        _ => "secondary"
    };

    static string GetStatusText(string status) => status switch
    {
        "new" => "Новый",
        "paid" => "Оплачен",
        "shipped" => "Отправлен",
        "completed" => "Завершён",
        "cancelled" => "Отменён",
        "refunded" => "Возврат",
        _ => status
    };

    static string GetPaymentStatusText(string status) => status switch
    {
        "success" => "Оплачено",
        "pending" => "Ожидает оплаты",
        "failed" => "Ошибка оплаты",
        "refunded" => "Средства возвращены",
        _ => status
    };
}
