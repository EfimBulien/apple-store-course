@model TechStoreEll.Web.Models.OrderViewModel
@{
    ViewData["Title"] = "История заказов";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0"><i class="bi bi-bag-check me-2"></i>История заказов</h2>
                <a href="/" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-house-door me-1"></i> На главную
                </a>
            </div>

            @if (Model.Orders.Any())
            {
                <div class="row g-4">
                    @foreach (var order in Model.Orders)
                    {
                        <div class="col-12">
                            <div class="card shadow-sm border-0 rounded-4">
                                <div class="card-header bg-body-tertiary d-flex justify-content-between align-items-center rounded-top-4">
                                    <h5 class="mb-0 fw-semibold">Заказ #@order.OrderNumber</h5>
                                    <span class="badge bg-@GetStatusColor(order.Status) px-3 py-2">
                                        @GetStatusText(order.Status)
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex flex-wrap justify-content-between align-items-start mb-3">
                                        <div>
                                            <p class="text-muted mb-1"><i class="bi bi-calendar-event me-1">
                                            </i> Создан: @order.CreatedAt.ToString("g")</p>
                                            <p class="text-muted mb-1"><i class="bi bi-cash-stack me-1">
                                            </i> Оплата:
                                            @if (order.PaymentStatus != null)
                                            {
                                                @GetPaymentStatusText(order.PaymentStatus)
                                            }
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <span class="text-muted small">Сумма заказа</span>
                                            <div class="fs-4 fw-bold text-success">
                                                @order.TotalAmount.ToString("C")
                                            </div>
                                        </div>
                                    </div>

                                    <h6 class="fw-semibold mb-3">Товары:</h6>
                                    <div class="row">
                                        @foreach (var item in order.Items)
                                        {
                                            <div class="col-md-6 col-lg-4 mb-3">
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                    {
                                                        <img src="@item.ImageUrl" alt="@item.ProductName"
                                                             class="rounded-3 shadow-sm me-2"
                                                             style="width: 60px; height: 60px; object-fit: cover;" />
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@item.ProductName</div>
                                                        @if (!string.IsNullOrEmpty(item.VariantInfo))
                                                        {
                                                            <small class="text-muted">@item.VariantInfo</small><br />
                                                        }
                                                        <span class="text-muted">
                                                            @item.Quantity × @item.UnitPrice.ToString("C")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                    <div class="text-end">
                                        <a asp-action="Details" asp-route-id="@order.Id"
                                           class="btn btn-outline-primary mt-2 px-3">
                                            <i class="bi bi-eye me-1"></i> Подробнее
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center py-5 fs-5 rounded-3 shadow-sm">
                    <i class="bi bi-info-circle me-2"></i> У вас пока нет заказов.
                </div>
            }
        </div>
    </div>
</div>

@functions {
    static string GetStatusColor(string status) => status switch
    {
        "completed" => "success",
        "shipped" => "info",
        "paid" => "primary",
        "cancelled" => "danger",
        "refunded" => "warning",
        _ => "secondary"
    };

    static string GetStatusText(string status) => status switch
    {
        "new" => "Новый",
        "paid" => "Оплачен",
        "shipped" => "Отправлен",
        "completed" => "Завершён",
        "cancelled" => "Отменён",
        "refunded" => "Возврат",
        _ => status
    };

    static string GetPaymentStatusText(string status) => status switch
    {
        "success" => "Оплачено",
        "pending" => "Ожидает оплаты",
        "failed" => "Ошибка оплаты",
        "refunded" => "Средства возвращены",
        _ => status
    };
}
