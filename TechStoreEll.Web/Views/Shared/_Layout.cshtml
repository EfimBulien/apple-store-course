<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TailwindTest</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col bg-gray-50 text-gray-800">
<header class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
        <a asp-controller="Home" asp-action="Index" class="text-xl font-semibold text-blue-600">TailwindTest</a>
        <nav class="space-x-4">
            <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-blue-600">Home</a>
            <a asp-controller="Home" asp-action="Privacy" class="text-gray-700 hover:text-blue-600">Privacy</a>
        </nav>
    </div>
    <body class="container mt-4">
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">Главная</a> |
            <a asp-controller="Account" asp-action="Profile">Профиль</a> |
            <a asp-controller="Account" asp-action="AdminPanel">Админка</a>
        </nav>
    </header>
    <hr />
    <main>
        @RenderBody()
    </main>
    </body>
</header>

<main class="flex-1 max-w-7xl mx-auto px-4 py-8">
    @RenderBody()
</main>

<footer class="bg-white border-t py-4 text-center text-sm text-gray-500">
    &copy; @DateTime.Now.Year - TailwindTest
</footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>