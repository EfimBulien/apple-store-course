@model TechStoreEll.Web.Models.ProductVariantCreateModel
@{
    var index = ViewData["Index"] as int? ?? 0;
}

<div class="variant-block border rounded-3 p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="variant-title mb-0 fw-bold text-primary">Вариант @(index + 1)</h5>
        <button type="button" class="remove-variant btn btn-outline-danger btn-sm">
            <i class="bi bi-trash me-1"></i>Удалить
        </button>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                <i class="bi bi-code-slash text-muted me-1"></i>Код варианта
            </label>
            <input type="text" 
                   name="Variants[@index].VariantCode" 
                   id="Variants_@(index)__VariantCode" 
                   class="form-control rounded-3" 
                   placeholder="Например: IP16-BLACK-128" 
                   required />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold">
                <i class="bi text-muted me-1"></i>Цена
            </label>
            <input type="number" 
                   step="0.01" 
                   name="Variants[@index].Price" 
                   id="Variants_@(index)__Price" 
                   class="form-control rounded-3" 
                   placeholder="0.00" 
                   required />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold">
                <i class="bi bi-palette text-muted me-1"></i>Цвет
            </label>
            <input type="text" 
                   name="Variants[@index].Color" 
                   id="Variants_@(index)__Color" 
                   class="form-control rounded-3" 
                   placeholder="Например: Черный, Silver" />
        </div>

        <div class="col-md-3">
            <label class="form-label fw-semibold">
                <i class="bi bi-hdd text-muted me-1"></i>Память (ГБ)
            </label>
            <input type="number" 
                   name="Variants[@index].StorageGb" 
                   id="Variants_@(index)__StorageGb" 
                   class="form-control rounded-3" 
                   placeholder="128" />
        </div>

        <div class="col-md-3">
            <label class="form-label fw-semibold">
                <i class="bi bi-memory text-muted me-1"></i>ОЗУ (ГБ)
            </label>
            <input type="number" 
                   name="Variants[@index].Ram" 
                   id="Variants_@(index)__Ram" 
                   class="form-control rounded-3" 
                   placeholder="8" />
        </div>

        <div class="col-12 image-upload">
            <label class="form-label fw-semibold">
                <i class="bi bi-image text-muted me-1"></i>Изображения варианта
            </label>
            <input type="file" 
                   name="Variants[@index].Images" 
                   id="Variants_@(index)__Images" 
                   class="form-control rounded-3" 
                   multiple 
                   accept="image/jpeg,image/jpg,image/png,image/gif,image/webp" />
            <small class="form-text text-muted">Можно выбрать несколько файлов (JPEG, PNG, GIF, WebP)</small>
            <div class="image-preview mt-2"></div>
        </div>
    </div>
</div>